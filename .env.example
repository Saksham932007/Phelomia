# Phelomia Environment Configuration
# Copy this file to .env and modify as needed

# Model Configuration
PHELOMIA_MODEL_NAME=HuggingFaceM4/idefics3-8b-docling
PHELOMIA_DEVICE=auto
PHELOMIA_MAX_LENGTH=1024

# UI Configuration
PHELOMIA_THEME=carbon
PHELOMIA_ENABLE_CHAT=true
PHELOMIA_MAX_FILE_SIZE=10
PHELOMIA_SHOW_ADVANCED_OPTIONS=false

# Performance Configuration
PHELOMIA_BATCH_SIZE=1
PHELOMIA_NUM_WORKERS=2
PHELOMIA_CACHE_ENABLED=true

# API Configuration
PHELOMIA_API_KEY=
PHELOMIA_RATE_LIMIT=100

# Debug Configuration
PHELOMIA_DEBUG=false
PHELOMIA_LOG_LEVEL=INFO

# Directory Configuration
PHELOMIA_DATA_DIR=data
PHELOMIA_LOGS_DIR=logs
PHELOMIA_UPLOADS_DIR=assets/uploads